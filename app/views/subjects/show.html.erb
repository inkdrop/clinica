<% content_for :subject_options do %>
  |
  <%= link_to 'Editar Tema', edit_subject_path(@subject) %> |
  <%= link_to 'Criar Tópico', new_subject_topic_path(@subject) %> |
  <%= link_to 'Voltar', subjects_path %>
<% end %>

<% content_for :subject_content do %>
  <h1><%= @subject.title %></h1>
  <%= @subject.created_at.strftime("%e %B, %Y") %> | <%= @subject.user %>
  <h3><%= @subject.description %></h3>

  <p>
    <%= @subject.content.html_safe %>
  </p>
  
  <% if @subject.topics.size > 0 %>
    <h3>(<%= @subject.topics.size %>) Tópico(s)</h3>
    <hr/>
    <%= render :partial => "topics/topic_partial", :collection => @subject.topics, :as => :topic %>
  <% else %>
    <span class="notice">Nenhum tópico relacionado a este tema. Para criar um clique <%= link_to 'aqui', new_subject_topic_path(@subject) %>.</span>
  <% end %>
  

<% end %>
