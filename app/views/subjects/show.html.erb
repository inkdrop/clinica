<% content_for :subject_content do %>
  <h2><%= @subject.title %></h2>

  <h3><%= @subject.description %></h3>

  <p>
    <%= @subject.content.html_safe %>
  </p>

  <p>
    <%= @subject.user %>
  </p>


  <%= link_to 'Edit', edit_subject_path(@subject) %> |
  <%= link_to 'Back', subjects_path %> |
  <%= link_to 'New Topic', new_subject_topic_path(@subject) %>
<% end %>
