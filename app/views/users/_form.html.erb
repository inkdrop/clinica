<h1 class="nav_title"><%=t :personal_data %></h1>
<%= form_for(@user, :html => { :class => "form-stacked" }) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation" class="alert-message error">
      <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="clearfix<% if @user.errors[:name].any? %> error<% end %>">
    <%= f.label :name, "Nome" %>
    <div class="input">
      <%= f.text_field :name %>
    </div>
  </div>
  
  <div class="clearfix<% if @user.errors[:email].any? %> error<% end %>">
    <%= f.label :email %>
    <div class="input">
      <%= f.text_field :email %>
    </div>
  </div>
  
  <div class="clearfix<% if @user.errors[:password].any? %> error<% end %>">
    <%= f.label :password, "Senha" %>
    <div class="input">
      <%= f.password_field :password %>
    </div>
  </div>
  
  <div class="clearfix<% if @user.errors[:password_confirmation].any? %> error<% end %>">
    <%= f.label :password_confirmation, "Confirmação da senha" %>
    <div class="input">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>
  
  <div class="clearfix<% if @user.errors[:curret_password].any? %> error<% end %>">
    <%= f.label :current_password, "Senha atual" %>
    <div class="input">
      <%= f.password_field :current_password %>
    </div>
  </div>
  
  <div class="actions">
    <%= f.submit :class => "btn success", :value => "✓ Salvar" %>
  </div>
<% end %>
