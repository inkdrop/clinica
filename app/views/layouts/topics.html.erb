  <%= stylesheet_link_tag 'subjects', :media => 'screen' %>

  <h1>III. Temas</h1>
  <hr/>
  <% if current_user %>
    <%= link_to 'Criar tema', new_subject_path %> |
    <%= link_to 'Editar Tema', edit_subject_path(@subject) %> |
    <%= link_to 'Criar TÃ³pico', new_subject_topic_path(@subject) %> |
