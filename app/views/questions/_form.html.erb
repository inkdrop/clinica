<%= form_for(@question, :html => { :class => "form-stacked" }) do |f| %>
  <% if @question.errors.any? %>
    <div id="error_explanation" class="alert-message error">
      <%= pluralize(@question.errors.count, "error") %> erro(s) encontrado(s):

      <ul>
      <% @question.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="clearfix<% if @question.errors[:question].any? %> error<% end %>">
    <%= f.label :question, "Pergunta" %>
    <div class="input"><%= f.text_field :question, :class => "span10" %></div>
  </div>
  
  <div class="clearfix<% if @question.errors[:answer].any? %> error<% end %>">
    <%= f.label :answer, "Resposta" %>
    <div class="input"><%= f.text_area :answer, :class => "mceEditor span10" %></div>
  </div>
  
  <div class="actions">
    <%= f.submit :class => "btn success", :value => "âœ“ Salvar" %>
  </div>

<% end %>
